{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 4
    },
    "dueDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{1,2}-[0-9]{1,2}$"
    },
    "done": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}
